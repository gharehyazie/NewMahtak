    contentType: 'application/json; charset-utf-8',
    dataType: 'json',
    success: function (data3) {
      console.log(data3);
      var ctx3 = document.getElementById("myChart3").getContext("2d");
      var myChart3 = new Chart(ctx3, {
        type: 'line',
