      console.log(data);
      var ctx2 = document.getElementById("myChart2").getContext("2d");
      var myPieChart = new Chart(ctx2, {
        type: 'pie',
        data: {
          labels: data.types,
          datasets: [{
            data: data.percent,
            backgroundColor: [
              "#FF6384",
